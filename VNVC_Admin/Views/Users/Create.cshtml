@model VNVC_Admin.Models.Users

@{
    ViewData["Title"] = "Thêm người dùng mới";
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h4 class="fw-bold mb-0">
                    <span class="text-muted fw-light">Quản lý / Người dùng /</span> Thêm mới
                </h4>
                <small class="text-muted">Thêm người dùng mới vào hệ thống</small>
            </div>
            <a class="btn btn-label-secondary" asp-action="Index">
                <i class="bx bx-arrow-back me-1"></i> Quay lại
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <form asp-action="Create" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <!-- Thông tin cá nhân -->
                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                                <input asp-for="FullName" class="form-control" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Gender" class="form-label">Giới tính <span class="text-danger">*</span></label>
                                <select asp-for="Gender" class="form-select" required>
                                    <option value="">-- Chọn giới tính --</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                                <span asp-validation-for="Gender" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DateOfBirth" class="form-label">Ngày sinh <span class="text-danger">*</span></label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" required />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                                <input asp-for="PhoneNumber" class="form-control" required />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <!-- Thông tin tài khoản -->
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                                <input asp-for="Email" type="email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Job" class="form-label">Nghề nghiệp</label>
                                <input asp-for="Job" class="form-control" />
                                <span asp-validation-for="Job" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="NumberBHYT" class="form-label">Số BHYT</label>
                                <input asp-for="NumberBHYT" class="form-control" />
                                <span asp-validation-for="NumberBHYT" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="IdCardNumber" class="form-label">Số CCCD/CMND</label>
                                <input asp-for="IdCardNumber" class="form-control" />
                                <span asp-validation-for="IdCardNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Địa chỉ -->
                    <div class="row mt-3">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="City" class="form-label">Tỉnh/Thành phố</label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="District" class="form-label">Quận/Huyện</label>
                                <input asp-for="District" class="form-control" />
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label asp-for="Ward" class="form-label">Phường/Xã</label>
                                <input asp-for="Ward" class="form-control" />
                                <span asp-validation-for="Ward" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-3">
                                <label asp-for="Address" class="form-label">Địa chỉ chi tiết</label>
                                <input asp-for="Address" class="form-control" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Nút submit -->
                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bx bx-save me-1"></i> Thêm người dùng
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

